<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <!-- Birinci Öğe -->
        <LinearLayout
            android:id="@+id/item1Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/imageViewbaba"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/senol" />

            <TextView
                android:id="@+id/textViewbaba"
                android:textColor="@color/colorPurple"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:layout_marginTop="60dp"
                android:text="FATHER" />

            <TextView
                android:id="@+id/textViewbaba2"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=" This is your father's name is Şenol" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/item2Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item1Layout"
            android:layout_marginTop="82dp">

            <ImageView
                android:id="@+id/imageViewmother"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/kardes" />

            <TextView
                android:id="@+id/textViewmother"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="60dp"
                android:text="BROTHERS"
                android:textColor="@color/colorPurple" />

            <TextView
                android:id="@+id/textViewmother2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="60dp"
                android:layout_weight="1"
                android:text=" These are your brothers names Ali and Oğuzhan"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item3Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item2Layout"
            android:layout_marginTop="84dp">

            <ImageView
                android:id="@+id/imageViewbrother"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/mom" />

            <TextView
                android:id="@+id/textViewbrother"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="60dp"
                android:text="MOTHER"
                android:textColor="@color/colorPurple" />

            <TextView
                android:id="@+id/textViewbrother2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="60dp"
                android:layout_weight="1"
                android:text="This is your mother's name Fatma"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonadd"
            android:layout_width="134dp"
            android:layout_height="58dp"
            android:layout_below="@+id/item3Layout"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="4dp"
            android:text="ADD TEXT" />

        <Button
            android:id="@+id/buttonaddphoto"
            android:layout_width="134dp"
            android:layout_height="58dp"
            android:layout_below="@+id/item3Layout"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="105dp"
            android:layout_toStartOf="@+id/buttonadd"
            android:text="ADD PHOTO" />


    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>