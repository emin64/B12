<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".gameActivity"
    android:layout_height="match_parent">

    <SearchView
        android:id="@+id/search_view"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:iconifiedByDefault="false"
        android:queryHint="Search for games, videos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewbaslık"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewbaslık"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:text="ACTİVİTY STORE"
        android:textColor="@color/colorPurple"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/search_view"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_game1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Oyun 1'e Giriş Yap"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/search_view"
        app:layout_constraintStart_toEndOf="@+id/imageViewspor1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="8dp"/>

    <ImageView
        android:id="@+id/imageViewspor1"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:srcCompat="@drawable/sports"
        app:layout_constraintTop_toTopOf="@id/button_game1"
        app:layout_constraintBottom_toBottomOf="@id/button_game1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>

    <Button
        android:id="@+id/button_game2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Oyun 2'ye Giriş Yap"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/button_game1"
        app:layout_constraintStart_toEndOf="@+id/imageViewspor2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="8dp"/>

    <ImageView
        android:id="@+id/imageViewspor2"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:srcCompat="@drawable/sports"
        app:layout_constraintTop_toTopOf="@id/button_game2"
        app:layout_constraintBottom_toBottomOf="@id/button_game2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>

    <Button
        android:id="@+id/button_game3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Oyun 3'e Giriş Yap"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/button_game2"
        app:layout_constraintStart_toEndOf="@+id/imageViewspor3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="8dp"/>

    <ImageView
        android:id="@+id/imageViewspor3"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:srcCompat="@drawable/sports"
        app:layout_constraintTop_toTopOf="@id/button_game3"
        app:layout_constraintBottom_toBottomOf="@id/button_game3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
